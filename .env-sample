APP_NAME="SystemsByBit - AI News"
APP_ENV=production
APP_DEBUG=false

STORAGE_PATH=storage/articles
MAX_ARTICLES_PER_SOURCE=15
CRAWL_FREQUENCY=7200 # in seconds (2 hours)
DELETE_OLDER_THAN_DAYS=30
PAGES_PER_PAGE=60

# Crawler specific settings
CRAWL_TIMEOUT=15 # seconds
HTTP_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/140.0.0.0 Safari/537.36"

# Rate limiting settings
CRAWL_DELAY_BETWEEN_SOURCES=3000000 # 3 seconds between sources (microseconds)
CRAWL_DELAY_BETWEEN_ARTICLES=500000 # 0.5 seconds between articles (microseconds)
CRAWL_DELAY_BETWEEN_REQUESTS=2000000 # 2 seconds between individual HTTP requests (microseconds)
MAX_REQUESTS_PER_MINUTE=30 # Maximum requests per minute per source

# Optional proxy settings (if needed)
# HTTP_PROXY=
# HTTPS_PROXY=

SSL_VERIFY=false

# SendGrid email service settings
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
SENDGRID_FROM_NAME=AI News Crawler
SENDGRID_TO_EMAIL=recipient@yourdomain.com